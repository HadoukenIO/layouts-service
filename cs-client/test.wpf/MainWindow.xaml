<Window x:Class="test.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test.wpf"
        mc:Ignorable="d"
        Title="WPF Application" Height="240" Width="320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Click="UndockButton_Click" Margin="10px">Undock Window</Button>
        <Button Grid.Row="1" Click="UndockGroup_Click" Margin="10px">Undock Group</Button>
    </Grid>
</Window>
