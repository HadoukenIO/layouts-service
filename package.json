{
  "name": "openfin-layouts",
  "version": "0.0.3",
  "description": "Client library for the OpenFin Layouts service",
  "types": "dist/client/main.d.ts",
  "main": "dist/client/main.js",
  "scripts": {
    "test:unit": "jest",
    "test": "node test/runner.js",
    "check": "gts check",
    "clean": "gts clean && rimraf dist staging",
    "compile": "npm run compile:client && npm run compile:provider",
    "compile:client": "tsc -p tsconfig.client.json && genversion dist/client/version.js",
    "compile:provider": "tsc -p tsconfig.provider.json",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check",
    "package": "webpack --mode production",
    "package:dev": "webpack --mode development && webpack --mode development --config webpack.demo.config.js",
    "build": "npm run compile && npm run package",
    "build:dev": "npm run compile && npm run package:dev",
    "watch": "concurrently \"npm run watch:ts\" \"npm run watch:wp\" \"npm start\"",
    "watch:ts": "concurrently \"tsc -w -p tsconfig.provider.json\" \"tsc -w -p tsconfig.client.json\"",
    "watch:wp": "webpack --watch --mode development",
    "dev": "npm run build:dev && npm run start",
    "start": "node server.js"
  },
  "keywords": [],
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/jest": "^23.3.0",
    "@types/mocha": "^2.2.48",
    "@types/mousetrap": "^1.6.0",
    "ava": "^0.25.0",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.5.1",
    "execa": "^0.10.0",
    "expose-loader": "^0.7.5",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "genversion": "^2.1.0",
    "gts": "^0.7.1",
    "hadouken-js-adapter": "^0.32.1-alpha.5",
    "jest": "^23.5.0",
    "mocha": "^5.0.4",
    "openfin-layouts": "./dist/",
    "serve-handler": "^2.3.12",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "typescript": "~2.9.1",
    "webpack": "^4.3.0",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "@types/sortablejs": "^1.3.32",
    "mousetrap": "^1.6.1",
    "sortablejs": "^1.7.0"
  },
  "optionalDependencies": {
    "robotjs": "^0.5.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "rootDir": "test",
    "testRegex": ".unittest.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ]
  }
}
